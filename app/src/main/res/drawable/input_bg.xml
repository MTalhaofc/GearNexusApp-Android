<!-- res/drawable/edit_text_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="2dp" android:left="2dp" android:top="25dp" >
        <shape android:shape="rectangle">
            <corners android:radius="95dp" />
            <solid android:color="#50817C7C" />
        </shape>
    </item>

    <!-- Main background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="15dp" /> <!-- Rounded corners with radius 15dp -->
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
